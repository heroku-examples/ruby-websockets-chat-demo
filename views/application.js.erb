var scheme   = "<%= @scheme %>";
var uri      = scheme + window.document.location.host + "/";
var ws       = null;

var open = function() {
    if (ws == null) {
        ws = new WebSocket(uri);
        ws.onmessage = onMessage;
        ws.onerror   = onError;
    }
}

var onMessage = function(message) {
    var data = JSON.parse(message.data);
    console.log(data);
    switch(data.command) {
    case "init":
        $(":text").val(data.opt.threshold);
        $.map(data.opt.counts, function(v, k) {
            $("#" + k).find(".count").html(v);
        });
        break;
    case "rikinderu":
        $("#" + data.target).find("span").html(data.count);
        new Audio("/assets/sounds/rikinderu.mp3").play();
        break;
    case "reset":
        $(".count").html(0);
        break;
    case "out":
        out(data);
        /*
        audio = new Audio("/assets/sounds/effect.mp3");
        audio.addEventListener("ended", function() {
            out_sound = new Audio("/assets/sounds/" + data.target + ".mp3");
            out_sound.addEventListener("ended", function() {
                $("#myModal").modal("hide");
            });
            out_sound.play();
        });
        $("#myModal").find(".modal-body").html(data.name + "アウト！");
        $("#myModal").modal("show");
        $("#" + data.target).find("span").html(0);
        audio.play();
        */
        break;
    }
};

var onError = function(error) {
    console.log(error);
    ws.open();
}

function out(data) {
    audio = new Audio("/assets/sounds/effect.mp3");
    audio.addEventListener("ended", function() {
        out_sound = new Audio("/assets/sounds/" + data.target + ".mp3");
        out_sound.addEventListener("ended", function() {
            $("#myModal").modal("hide");
        });
        out_sound.play();
    });
    $("#myModal").find(".modal-body").html(data.name + "アウト！");
    $("#myModal").modal("show");
    $("#" + data.target).find("span").html(0);
    audio.play();
}
$("#input-form").on("submit", function(event) {
    event.preventDefault();
    var val = $(":text").val();
    send({command: "threshold", val: val});
});

$("#reset").on("click", function(event) {
    event.preventDefault();
    send({command: "reset"});
});

function send(data) {
    ws.send(JSON.stringify(data));
}

$(function() {
    open();
});
